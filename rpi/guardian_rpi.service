[Unit]
Description=Child Safety Camera Service
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/guardian-keychain/rpi
EnvironmentFile=/home/pi/guardian-keychain/rpi/.env
ExecStart=/home/pi/guardian-keychain/rpi/.venv/bin/python /home/pi/guardian-keychain/rpi/app.py
Restart=always
RestartSec=3
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
